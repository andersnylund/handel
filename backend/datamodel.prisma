type User {
  sub: String!
  email: String!
}

type Item {
  id: ID! @unique
  title: String!
  description: String!
  price: Int!
  image: String!
  largeImage: String!
  user: User!
}

type Deal {
  
}

type Offer {
  id: ID! @unique
  type: OfferType!
  maker: Item! @relation(name: "Maker")
  receiver: Item! @relation(name: "Receiver")
}

enum OfferType {
  ACCEPT
  REJECT
}
